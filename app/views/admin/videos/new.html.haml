.new_video.span6
  %h3 Step 1: 影片資訊"
  = form_for :video, url: upload_new_admin_video_path, html: { class: "form-horizontal" } do |vid|
    .control-group
      .control-label= '主題'
      .controls
        = vid.text_field :title

    .control-group
      .control-label= '簡介'
      .controls
        = vid.text_area :description, rows: 5

    .control-group
      .controls
        .pull-right= link_to '取消', admin_videos_path, class: 'btn btn-danger'
        = vid.submit '下一步', class: 'btn btn-success'


